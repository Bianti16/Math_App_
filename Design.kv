ScreenManager:
    MainMenu:
    Points:
    P_in_Line:
    P_in_Plane:

<MainMenu>:
    name: 'menu'
    MDRaisedButton:
        text:"Pikat"
        size_hint: 0.7, 0.1
        font_size: '26'
        text_color: 1, 1, 1, 1
        pos_hint:{"x":0.15, "top":0.85}
        on_release:
            app.root.current = "points"
            root.manager.transition.direction = "left"

    MDRaisedButton:
        text:"Button2"
        size_hint: 0.7, 0.1
        font_size: '26'
        text_color: 1, 1, 1, 1
        pos_hint:{"x":0.15, "top":0.65}

<Points>:
    name: 'points'

    MDRaisedButton:
        text:"Pikat në bosht"
        size_hint: 0.7, 0.1
        font_size: '26'
        text_color: 1, 1, 1, 1
        pos_hint:{"x":0.15, "top":0.85}
        on_release:
            app.root.current = "p_in_line"
            root.manager.transition.direction = "left"


    MDRaisedButton:
        text:"Pikat në rrafsh"
        size_hint: 0.7, 0.1
        font_size: '26'
        text_color: 1, 1, 1, 1
        pos_hint:{"x":0.15, "top":0.65}
        on_release:
            app.root.current = "p_in_plane"
            root.manager.transition.direction = "left"


    MDRaisedButton:
        text: "   Kthehu"
        size_hint: 0.4, 0.05
        font_size: '18'
        text_color: 1, 1, 1, 1
        on_release:
            app.root.current = "menu"
            root.manager.transition.direction = "right"

    MDIconButton:
        icon: 'chevron-left'
        size_hint: 0.1, 0.05
        on_release:
            app.root.current = "menu"
            root.manager.transition.direction = "right"

<P_in_Line>:
    name: 'p_in_line'

    input_label: input_label
    result_label: result_label

    x1_value: x1_value
    x2_value: x2_value

    state_label: state_label

    third_input_label: third_input_label

    GridLayout:
        size_hint: 0.882, 0.5/3
        pos_hint: {'x': 0.059, 'y': 0.7}
        rows: 1
        cols: 1

        GridLayout:
            rows: 1
            cols: 3

            MDTextFieldRect:
                id: x1_value
                font_size: '50sp'
                padding_y:[32, 0]

            MDTextFieldRect:
                id: x2_value
                font_size: '50sp'
                padding_y:[32, 0]

            MDTextFieldRect:
                id: input_label
                font_size: '50sp'
                padding_y:[32, 0]

    MDRaisedButton:
        text: 'Llogarit'
        font_size: '20'
        size_hint: 0.88, 0.06
        text_color: 1, 1, 1, 1
        pos_hint: {'x': 0.06, 'y': 0.640}
        on_release:
            root.calculate()

    TextInput:
        id: result_label
        text: 'Rez: '
        font_size: '26sp'
        padding_y:[9, 0]
        pos_hint: {'x': 0.059, 'y': 0.53}
        size_hint: 0.882, 0.060

    MDRaisedButton:
        text: 'Fshij'
        font_size: '20'
        size_hint: 0.88, 0.06
        text_color: 1, 1, 1, 1
        pos_hint: {'x': 0.06, 'y': 0.470}
        on_release:
            root.clear()

    Label:
        id: state_label

        text: 'Duke kalk. lambdën'
        color: app.theme_cls.primary_color
        font_size: '16sp'
        size_hint: 0.4, 0.07
        pos_hint: {'right': 0.94, 'y':0.1}

    Label:
        text: 'x1'
        font_size: '22sp'
        size_hint: 0.0001, 0.0001
        pos_hint: {'x': 0.13, 'y': 0.9}
    Label:
        text: 'x2'
        font_size: '22sp'
        size_hint: 0.0001, 0.0001
        pos_hint: {'x': 0.42, 'y': 0.9}

    Label:
        id: third_input_label

        text: 'Pika'
        font_size: '22sp'
        size_hint: 0.0001, 0.0001
        pos_hint: {'x': 0.75, 'y': 0.9}

    MDRaisedButton:
        text: "   Kthehu"
        size_hint: 0.4, 0.05
        font_size: '18'
        text_color: 1, 1, 1, 1
        on_release:
            app.root.current = "points"
            root.manager.transition.direction = "right"

    MDIconButton:
        icon: 'chevron-left'
        size_hint: 0.1, 0.05
        on_release:
            app.root.current = "points"
            root.manager.transition.direction = "right"

<P_in_Plane>:
    name: 'p_in_plane'

    x_one: x_one
    y_one: y_one
    x_two: x_two
    y_two: y_two

    result_label_plane: result_label_plane

    # Point one
    Label:
        text: 'P1('
        size_hint: 0.001, 0.001
        font_size: '50sp'
        pos_hint: {'x': 0.16, 'top': 0.85}

    MDTextFieldRect:
        id: x_one

        size_hint: 0.15, 0.0844
        font_size: '40sp'
        pos_hint: {'x': 0.27, 'top': 0.89}

    Label:
        text: ','
        size_hint: 0.001, 0.001
        font_size: '40sp'
        pos_hint: {'x': 0.44, 'top': 0.83}

    MDTextFieldRect:
        id: y_one

        size_hint: 0.15, 0.0844
        font_size: '40sp'
        pos_hint: {'x': 0.46, 'top': 0.89}

    Label:
        text: ')'
        size_hint: 0.001, 0.001
        font_size: '50sp'
        pos_hint: {'x': 0.64, 'top': 0.85}

    # Point two
    Label:
        text: 'P2('
        size_hint: 0.001, 0.001
        font_size: '50sp'
        pos_hint: {'x': 0.16, 'top': 0.74}

    MDTextFieldRect:
        id: x_two

        size_hint: 0.15, 0.0844
        font_size: '40sp'
        pos_hint: {'x': 0.27, 'top': 0.78}

    Label:
        text: ','
        size_hint: 0.001, 0.001
        font_size: '40sp'
        pos_hint: {'x': 0.44, 'top': 0.72}

    MDTextFieldRect:
        id: y_two

        size_hint: 0.15, 0.0844
        font_size: '40sp'
        pos_hint: {'x': 0.46, 'top': 0.78}

    Label:
        text: ')'
        size_hint: 0.001, 0.001
        font_size: '50sp'
        pos_hint: {'x': 0.64, 'top': 0.74}


    MDRaisedButton:
        text: 'Llogarit'
        font_size: '20'
        size_hint: 0.88, 0.06
        text_color: 1, 1, 1, 1
        pos_hint: {'x': 0.06, 'y': 0.60}
        on_release:
            root.calculate_distance_plane()

    TextInput:
        id: result_label_plane

        text: 'D: '
        font_size: '26sp'
        padding_y:[9, 0]
        pos_hint: {'x': 0.059, 'y': 0.49}
        size_hint: 0.882, 0.060

    MDRaisedButton:
        text: 'Fshij'
        font_size: '20'
        size_hint: 0.88, 0.06
        text_color: 1, 1, 1, 1
        pos_hint: {'x': 0.06, 'y': 0.43}
        on_release:
            root.clear()

    MDRaisedButton:
        text: "   Kthehu"
        size_hint: 0.4, 0.05
        font_size: '18'
        text_color: 1, 1, 1, 1
        on_release:
            app.root.current = "points"
            root.manager.transition.direction = "right"

    MDIconButton:
        icon: 'chevron-left'
        size_hint: 0.1, 0.05
        on_release:
            app.root.current = "points"
            root.manager.transition.direction = "right"